{
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/!(*.test).js", "!src/index.js"],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["lcov", "text"],
  "testMatch": ["**/(*.test).js"],
  "verbose": true,
  "detectOpenHandles": true,
  "testEnvironment": "node",
  "transform": {
    "^.+.tsx?$": ["ts-jest", {}]
  },
  "transformIgnorePatterns": ["!node_modules/"]
}
